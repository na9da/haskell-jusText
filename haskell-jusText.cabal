name:                haskell-jusText
version:             0.1.0.0
synopsis:            Removes boilerplate from HTML pages
description:
homepage:            https://github.com/githubuser/haskell-jusText#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2017 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
  build-depends:       base >= 4.7 && < 5
                     , text >= 1.2 && < 2
                     , text-icu >= 0.7 && < 1
                     , html-parse >= 0.2 && < 1
                     , text-regex-replace >= 0.1 && < 1
  default-language:    Haskell2010

executable haskell-jusText-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , haskell-jusText
                     , text >= 1.2 && < 2
                     , bytestring >= 0.10 && < 1
  default-language:    Haskell2010

test-suite haskell-jusText-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , haskell-jusText
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/na9da/haskell-jusText
